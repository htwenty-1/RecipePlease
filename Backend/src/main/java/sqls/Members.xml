<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.recipe.a.dao.MembersDao">

<select id="countMembers" resultType="Integer">
	SELECT COUNT(*) FROM MEMBERS
</select>

<insert id="regist" parameterType="com.recipe.a.dto.MembersDto">
	INSERT INTO MEMBERS(MEMBER_ID, MEMBER_PWD, MEMBER_NICKNAME, MEMBER_EMAIL, 
						MEMBER_COIN, MEMBER_MAIN_ADDR, MEMBER_DETAIL_ADDR, MEMBER_ZIPCODE,
						MEMBER_GENDER, MEMBER_NAME, MEMBER_GRADE, SALT)
	VALUES(#{id}, #{pwd}, #{nickName}, #{email}, #{address}, )
</insert>

