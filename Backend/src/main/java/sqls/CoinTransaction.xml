<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.recipe.a.dao.CoinTransactionDao">

	<!-- 해당 멤버가 구매한 레시피인지 확인 -->
	<select id="purchaseRecipeCheck" parameterType="com.recipe.a.dto.CoinTransactionDto" resultType="Integer">
		SELECT COUNT(*)
		FROM COINTRANSACTION WHERE MEMBERID=#{memberId} AND DOCSSEQ=#{docsSeq}
	</select>
	
    <!-- tester -->
    <select id="coinTransactionTester" resultType="com.recipe.a.dto.CoinTransactionDto">
        SELECT * FROM COINTRANSACTION
    </select>

    <!-- 코인 충전시 -->

    <!-- 코인 사용시 -->
</mapper>